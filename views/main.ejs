<html>
	<head>
		<link href="assets/style.css" type="text/css" rel="stylesheet" />
		<script src="https://code.jquery.com/jquery-1.11.3.min.js" ></script>

        <meta charset=utf-8><meta http-equiv=X-UA-Compatible content="IE=edge">
        <meta name=viewport content="width=device-width, initial-scale=1">
        <meta name=description content=""><meta name=author content="">
        <link rel=icon href=/Content/AssetsBS3/img/favicon.ico>

				<title>這是Title</title>
        <link href=https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css rel=stylesheet>
        <link href=https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css rel=stylesheet>
        <link href=/Content/AssetsBS3/examples/theme.css rel=stylesheet>
        <!--[if lt IE 9]>
        <script src=~/Scripts/AssetsBS3/ie8-responsive-file-warning.js>
        </script>
        <![endif]-->

        <script src=/Scripts/AssetsBS3/ie-emulation-modes-warning.js></script>

        <!--[if lt IE 9]>
        <script src=https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js></script>
        <script src=https://oss.maxcdn.com/respond/1.4.2/respond.min.js>
        </script>
        <![endif]-->
	</head>
	<body>
    <center>
    <div class="container theme-showcase" role=main>
		<h1>送筆資料吧</h1>
		<form  method="post" action="/r">
				<div class="form-group">
					<div class="col-sm-12">
						<input type="text" class="form-control input-lg" name="username" placeholder="你的名稱: ">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-12">
						<textarea class="form-control input-lg" rows="5" name="content" placeholder="請填寫內容" ></textarea>
					</div>
				</div>
				<div class="form-group">
					<div style="text-align:center;">
						<button type="submit" class="btn btn-lg btn-info" style="color:white">送出</button><!--userinfos['username']-->
					</div>
				</div>
		</form>

		<div class=jumbotron>
	  	<h1>期中作業(っ´ω`)っ━☆留言板</h1>
	  </div>

		<dir class="row">
	        <% if(userinfos.length){ %>

	            <% userinfos.forEach(function(userinfos){ %>
				<!--div class=col-sm-4-->
				<div class="col-xs-6 col-lg-4">
	        <div class="panel panel-success">
	          <div class=panel-heading>
	            <h3 class=panel-title>留言人: <%= userinfos['username'] %></h3>
	          </div>
	          <div class=panel-body>
	            <%= userinfos['content'] %>
	          </div>
	          <div class=panel-body>
							<a href="/edit/<%= userinfos['_id']%>" class="btn btn-xs btn-primary" role="button">Edit</a>
							<a href="/del/<%= userinfos['_id']%>" class="btn btn-xs btn-danger" role="button">Delete Directly</a>
	          </div>
	        </div>

				</div>
	        <!--<br/>原本是做間格用-->
	            <% }) %>
	        <% } %>
		</dir>
	</center>

    </div><!-- container結尾 -->
    <script src=https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js></script>
    <script src=https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js>
    </script><script src=/Scripts/AssetsBS3/docs.min.js></script>
    <script src=/Scripts/AssetsBS3/ie10-viewport-bug-workaround.js></script>

    </body>
</html>
